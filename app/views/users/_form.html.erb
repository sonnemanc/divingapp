
  <%= form_for @user do |f| %>
    <%=  render partial: "layouts/errors", locals: {record: @user} %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :email %><br>
    <%= f.text_field :email %><br>

    <%= f.label :password %><br>
    <%= f.password_field :password %><br>

    <%= f.label :confirm_password %><br>
    <%= f.password_field :password_confirmation %><br><br>

    <%= f.submit "Create User" %>
  <% end %>
